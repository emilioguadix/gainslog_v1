<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="@dimen/padding_login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.boxData.BoxDataFragment">


    <androidx.cardview.widget.CardView
        android:id="@+id/cvExercise"
        android:clickable="true"
        android:foreground="?android:attr/selectableItemBackground"
        app:cardCornerRadius="8dp"
        app:cardBackgroundColor="@color/colorAccent"
        android:layout_width="match_parent"
        android:layout_height="@dimen/cardview_heigth">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <com.vansuita.materialabout.views.CircleImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:scaleType="fitCenter"
                android:padding="@dimen/minMargin"
                android:src="@mipmap/ic_exercise" />

            <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/exercise"
                android:textColor="@color/colorWhite"
            style="@style/TextStyle_tit2"
            android:gravity="center_vertical" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView
        android:id="@+id/cvTarget"
        app:cardCornerRadius="8dp"
        android:clickable="true"
        android:foreground="?android:attr/selectableItemBackground"
        android:layout_marginTop="@dimen/login_marginBottom"
        app:cardBackgroundColor="@color/colorPrimaryDarkBlue"
        android:layout_width="match_parent"
        android:layout_height="@dimen/cardview_heigth">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <com.vansuita.materialabout.views.CircleImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:padding="@dimen/minMargin"
                android:gravity="center_vertical"
                android:scaleType="fitCenter"
                android:src="@mipmap/ic_target" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/target"
                style="@style/TextStyle_tit2"
                android:textColor="@color/colorWhite"
                android:gravity="center_vertical" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>