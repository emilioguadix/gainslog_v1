<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="@dimen/card_elevation"
    app:cardCornerRadius="@dimen/card_radius"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_item_serie"
        android:orientation="horizontal"
        android:padding="@dimen/minMargin">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/num_serie"
                style="@style/TextStyle_tit2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/minMargin"
                android:text="Serie 1"
                android:textAppearance="?attr/textAppearanceListItem" />


            <TextView
                android:id="@+id/typeSerie"
                android:textColor="@color/colorWhite"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="AproximaciÃ³n"
                android:textAppearance="?attr/textAppearanceListItem" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/minMargin"
            android:layout_gravity="center_vertical"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/minMargin"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/img_min_icon"
                    android:layout_height="@dimen/img_min_icon"
                    android:src="@mipmap/ic_work_data"
                    app:tint="@color/colorAccent" />

                <TextView
                    android:id="@+id/tvWeight"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textSize="@dimen/size_title3"
                    android:textColor="@color/colorWhite"
                    android:text="0 KG" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/img_min_icon"
                    android:layout_height="@dimen/img_min_icon"
                    android:src="@mipmap/ic_intensity_data"
                    app:tint="@color/colorAccent" />

                <TextView
                    android:id="@+id/tvIntensity"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/size_title3"
                    android:text="RIR 0" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/login_marginBottom"
            android:layout_gravity="center_vertical"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/minMargin"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/img_min_icon"
                    android:layout_height="@dimen/img_min_icon"
                    android:src="@mipmap/ic_reps_data"
                    app:tint="@color/colorAccent" />

                <TextView
                    android:id="@+id/tvReps"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/size_title3"
                    android:text="10 reps" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/img_min_icon"
                    android:layout_height="@dimen/img_min_icon"
                    android:src="@mipmap/ic_timerest_data"
                    app:tint="@color/colorAccent" />

                <TextView
                    android:id="@+id/tvRestTime"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/size_title3"
                    android:text="120s" />
            </LinearLayout>

        </LinearLayout>

        <ImageView
            android:id="@+id/star"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@mipmap/ic_marked_data"
            app:tint="@color/colorWhite"/>

    </LinearLayout>
</androidx.cardview.widget.CardView>