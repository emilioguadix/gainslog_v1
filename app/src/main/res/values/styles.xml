        <item name="colorPrimaryDark">@color/black_overlay</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="NoActionBar" parent="AppTheme" >
    <!-- Este estilo no muestra el tÃ­tulo, por tanto no se visualiza
     la barra AppBar-->
